@model IEnumerable<WhatSAP.Models.Activity>

@{
    ViewData["Title"] = "Index";
}

<h2>Activity List</h2>
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Create New Activity</a>
    </p>
}

<p class="pager">
    @if (ViewBag.HasPreviousPage)
    {
        <a class="prev" href="@Url.Action("Index", "Activity" , new { page=ViewBag.PreviousPage })">
            &lt; Previous
        </a>
    }

    @if (ViewBag.HasNextPage)
    {
        <a class="next" href="@Url.Action("Index", "Activity" , new { page=ViewBag.NextPage })">
            Next &gt;
        </a>
    }
</p>


<div class="row">
    @for (int i = 0; i < Model.Count(); i++)
    {
        if (i > 0 && i % 3 == 0)
        {
            @:</div><div class="row">
            <br />
        }
        
        <div class="col-sm-4">
            <div class="card">
                <img class="card-img-top" src="~/images/activities/@(Model.ElementAt(i).Key).jpg" alt="@Model.ElementAt(i).ActivityName" style="height:200px" />
                <div class="card-body" style="height: 250px">
                    <h5 class="card-title">@Model.ElementAt(i).ActivityName</h5>
                    <p class="card-text">
                        @Model.ElementAt(i).Description <br />
                        Price: $@Model.ElementAt(i).Price per person
                    </p>
                    <a class="btn btn-primary" href="@Url.Action("Details", "Action")">
                        See Details
                        @*TODO: Should be replaced! Calling Details method in Activity Controller by passing the activity ID*@
                    </a>
                </div>
            </div>
        </div>

    }
</div>

