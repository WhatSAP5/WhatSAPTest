@*Image Height = 350px*@
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="padding-top:2em;">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
